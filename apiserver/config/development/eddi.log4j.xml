<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="30">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <NoSql name="databaseAppender">
            <MongoDb server="127.0.0.1" port="27017" databaseName="eddi" collectionName="log" username="root"
                     password=""/>
        </NoSql>

        <Async name="ASYNC-CONSOLE">
            <AppenderRef ref="CONSOLE"/>
        </Async>

        <Async name="ASYNC-DATABASE">
            <AppenderRef ref="databaseAppender"/>
        </Async>

    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ASYNC-CONSOLE" level="info"/>
            <AppenderRef ref="ASYNC-DATABASE" level="error"/>
        </Root>
    </Loggers>
</Configuration>
